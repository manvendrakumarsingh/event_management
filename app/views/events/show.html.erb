<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>
<%if current_user.manager?%>
	<%= link_to 'Edit', edit_event_path(@event) %> |
<%end%>
</br>
<%= link_to 'Back', events_path %>

Comments::

<ul>
	<%@event.comments.each do |commment| %>
		<li>
			<%commment.body%>
		</li>	
	<%end%>
	<%=link_to "New Comment", new_comment_path(event_id: @event) %>
</ul>
